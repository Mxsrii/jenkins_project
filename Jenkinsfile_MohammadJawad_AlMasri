pipeline {
    agent any
    environment {
        VIRTUAL_ENV = 'venv'
        PATH = "C:\\Users\\user\\AppData\\Local\\Programs\\Python\\Python314;C:\\Users\\user\\AppData\\Local\\Programs\\Python\\Python314\\Scripts;${env.PATH}"
    }
    stages {
        stage('Setup') {
            steps {
                script {
                    bat 'python --version'
                    if (!fileExists("${env.WORKSPACE}\\${VIRTUAL_ENV}")) {
                        bat "python -m venv ${VIRTUAL_ENV}"
                    }
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && pip install -r requirements.txt"
                }
            }
        }
        stage('Lint') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && flake8 app.py"
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && pytest"
                }
            }
        }
        stage('Coverage') {
            steps {
                script {
                    echo "Running code coverage analysis..."
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && coverage run -m pytest"
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && coverage report"
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && coverage html"
                    echo "Coverage report generated in htmlcov/index.html"
                }
            }
        }
        stage('Security Scan') {
            steps {
                script {
                    echo "Running security scan with Bandit..."
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && bandit -r . -f txt -o bandit-report.txt || exit 0"
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && bandit -r . -f json -o bandit-report.json || exit 0"
                    echo "Security scan completed. Reports: bandit-report.txt, bandit-report.json"
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo "Deploying application..."
                    bat """
                        echo Deployment started at %date% %time% > deployment.log
                        echo Deploying to local environment >> deployment.log
                        ${VIRTUAL_ENV}\\Scripts\\activate && python app.py > app.log 2>&1 &
                        echo Application deployed successfully >> deployment.log
                        type deployment.log
                    """
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}